@page
@model Story.Pages.DetailsModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Story</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.CreateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.CreateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.Body)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.Body)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.Creator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.Creator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.ValueWeight)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.ValueWeight.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.EffortWeight)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.EffortWeight.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.ValueFrequency)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.ValueFrequency.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.ValueType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.ValueType.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.Status.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Story.Group)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Story.Group.Description)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Story.Id" class="btn btn-warning">Edit</a> |
        <a asp-page="./Index" class="btn btn-primary">Back to List</a>
    </div>
    <p>
        <hr />
        <h4>Comments</h4>
        <hr />
        <a asp-area="" asp-page="/Comments/Create" asp-route-StoryId="@Model.Story.Id" class="btn btn-success">Create</a>
    </p>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Comment[0].CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment[0].Creator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment[0].Body)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment[0].Story)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Comment)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Creator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Story.Title)
                    </td>
                    <td>
                        <a asp-page="Comments/Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="Comments/Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="Comments/Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
</body>
</html>
