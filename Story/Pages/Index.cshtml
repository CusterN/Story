@page
@model Story.Pages.IndexModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="row" style="width:auto">
        <p>
            <a asp-page="Create" class="btn btn-success">Create New</a>
        </p>
    </div>

    <table id="StoryTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th hidden>
                    @Html.DisplayNameFor(model => model.Story[0].Status.SortOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].Creator)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.Story[0].Group)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].ValueWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].EffortWeight)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.Story[0].ValueFrequency)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.Story[0].ValueType)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Story)
            {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Status.SortOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Group.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValueWeight.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EffortWeight.Description)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.ValueFrequency.Description)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.ValueType.Description)
                </td>
                <td>
                    <font size="5">
                        <a style="color:#5cb85c" asp-page="Comments/Create" data-toggle="tooltip" data-placement="top" title="Add a comment" asp-route-StoryId="@item.Id" class="fas fa-comment-alt"></a>
                        <a style="color:#f0ad4e" asp-page="Edit" data-toggle="tooltip" data-placement="top" title="Edit the supplier" asp-route-Id="@item.Id" class="fas fa-edit"></a>
                    </font>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        $('#StoryTable').dataTable({
            searching: true,
            lengthChange: false,
            info: false,
            pagingType: "first_last_numbers",
            order: [0, 'asc'],
            pageLength: 5,
            dom: 'Bfrtip',
            buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
        });
    });
</script>
