@page
@model Story.Pages.IndexModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-page="Create" class="btn btn-success">Create New</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].Creator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].Group)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].ValueWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].ValueFrequency)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story[0].ValueType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Story)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Description)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValueWeight.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValueFrequency.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValueType.Description)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
