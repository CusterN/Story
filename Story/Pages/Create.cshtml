@page
@model Story.Pages.CreateModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Story</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div hidden class="form-group">
                    <label asp-for="Story.CreateDate" class="control-label"></label>
                    <input asp-for="Story.CreateDate" type="datetime" value="@DateTime.Now" class="form-control" />
                    <span asp-validation-for="Story.CreateDate" class="text-danger"></span>
                </div>
                <div hidden class="form-group">
                    <label asp-for="Story.UpdateDate" class="control-label"></label>
                    <input asp-for="Story.UpdateDate" type="datetime" value="@DateTime.Now" class="form-control" />
                    <span asp-validation-for="Story.UpdateDate" class="text-danger"></span>
                </div>

                <div class="row" style="width:auto">
                    <div class="form-group">
                        <text>Creator</text>
                        <input readonly asp-for="Story.Creator" value="@User.Identity.Name" class="form-control" />
                        <span asp-validation-for="Story.Creator" class="text-danger"></span>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="form-group">
                        <a asp-page="Groups/Index" style="margin-left:5px;">Group</a>
                        <select asp-for="Story.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                    </div>
                </div>
                <div class="row" style="width:auto">
                    <div class="form-group">
                        <a asp-page="ValueWeights/Index" style="margin-left:5px;">Value Weight</a>
                        <select asp-for="Story.ValueWeightId" class="form-control" asp-items="ViewBag.ValueWeightId"></select>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="form-group">
                        <a asp-page="ValueFrequencies/Index" style="margin-left:5px;">Frequency</a>
                        <select asp-for="Story.ValueFrequencyId" class="form-control" asp-items="ViewBag.ValueFrequencyId"></select>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="form-group">
                        <a asp-page="ValueTypes/Index" style="margin-left:5px;">Type</a>
                        <select asp-for="Story.ValueTypeId" class="form-control" asp-items="ViewBag.ValueTypeId"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Story.Title" class="control-label"></label>
                    <input asp-for="Story.Title" class="form-control" />
                    <span asp-validation-for="Story.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.Body" class="control-label"></label>
                    <textarea asp-for="Story.Body" class="form-control"></textarea>
                    <span asp-validation-for="Story.Body" class="text-danger"></span>
                </div>

                <div hidden class="form-group">
                    <label asp-for="Story.StatusId" class="control-label"></label>
                    <select asp-for="Story.StatusId" value="1" class="form-control" asp-items="ViewBag.StatusId"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index" class="btn btn-primary">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>

