@page
@model Story.Pages.EditModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Story</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Story.Id" />
                <div class="form-group">
                    <label asp-for="Story.CreateDate" class="control-label"></label>
                    <input readonly asp-for="Story.CreateDate" class="form-control" />
                    <span asp-validation-for="Story.CreateDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.UpdateDate" class="control-label"></label>
                    <input readonly asp-for="Story.UpdateDate" type="datetime" value="@DateTime.Now" class="form-control" />
                    <span asp-validation-for="Story.UpdateDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.Title" class="control-label"></label>
                    <input asp-for="Story.Title" class="form-control" />
                    <span asp-validation-for="Story.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.Body" class="control-label"></label>
                    <textarea asp-for="Story.Body" class="form-control"></textarea>
                    <span asp-validation-for="Story.Body" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.Creator" class="control-label"></label>
                    <input readonly asp-for="Story.Creator" class="form-control" />
                    <span asp-validation-for="Story.Creator" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.ValueWeightId" class="control-label"></label>
                    <select asp-for="Story.ValueWeightId" class="form-control" asp-items="ViewBag.ValueWeightId"></select>
                    <span asp-validation-for="Story.ValueWeightId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.ValueFrequencyId" class="control-label"></label>
                    <select asp-for="Story.ValueFrequencyId" class="form-control" asp-items="ViewBag.ValueFrequencyId"></select>
                    <span asp-validation-for="Story.ValueFrequencyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.ValueTypeId" class="control-label"></label>
                    <select asp-for="Story.ValueTypeId" class="form-control" asp-items="ViewBag.ValueTypeId"></select>
                    <span asp-validation-for="Story.ValueTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.StatusId" class="control-label"></label>
                    <select asp-for="Story.StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                    <span asp-validation-for="Story.StatusId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Story.GroupId" class="control-label"></label>
                    <select asp-for="Story.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                    <span asp-validation-for="Story.GroupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index" class="btn btn-primary">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
